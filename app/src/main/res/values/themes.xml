<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Atlas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_white</item>
        <item name="colorPrimaryVariant">@color/back_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:textColorPrimaryInverse">#E9EDEB</item>
        <item name="android:textColorSecondary">#707671</item>
        <item name="android:textColorPrimary">#223528</item>
        <item name="colorSecondaryVariant">@color/green_color</item>
        <item name="colorOnSecondary">@color/green_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/back_white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fdfdfd</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="boxStrokeWidth">0.8dp</item>
    </style>
</resources>